#include "main.h"
/**
 * print_remaining_days - takes a date and prints how many days are
 * left in the year, taking leap years into account
 * @month: month in number format
 * @day: day of month
 * @year: year
 * Return: void
 */
void print_diagonal(int size)
{
	int i, spa;

	if (size <= 0)
	{
		/* code */
		_putchar('\n');
	}
	else
	{
		for (i = 0; i < size; i++)
		{
			/* code */
			for (spa = 0; spa < i; spa++)
			{
				/* code */
				_putchar(' ');
			}
			_putchar('\\');
			_putchar('\n');
		}
	}

}
